---
// Admin Dashboard - direct URL access only
// For production security, set pages.admin: false in config.ts
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Admin Dashboard</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    h1, h2, h3 {
      color: #1a202c;
    }

    /* Login Section */
    #login-section {
      background: white;
      border-radius: 16px;
      padding: 40px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 500px;
      margin: 100px auto;
    }

    #login-section h2 {
      margin-bottom: 24px;
      color: #667eea;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #4a5568;
    }

    input {
      width: 100%;
      padding: 12px 16px;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 14px;
      transition: border-color 0.3s;
      margin-bottom: 16px;
    }

    input:focus {
      outline: none;
      border-color: #667eea;
    }

    button {
      cursor: pointer;
      padding: 12px 24px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.3s;
    }

    #login-btn {
      width: 100%;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    #login-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
    }

    /* Dashboard */
    #dashboard-section {
      background: white;
      border-radius: 16px;
      padding: 40px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      margin-top: 40px;
    }

    #dashboard-section h1 {
      margin-bottom: 32px;
      color: #667eea;
    }

    /* Tabs */
    .tabs {
      display: flex;
      border-bottom: 2px solid #e2e8f0;
      margin-bottom: 32px;
      gap: 4px;
      overflow-x: auto;
    }

    .tab-btn {
      padding: 12px 24px;
      background: transparent;
      border: none;
      border-bottom: 3px solid transparent;
      cursor: pointer;
      font-weight: 600;
      color: #718096;
      transition: all 0.3s;
    }

    .tab-btn.active {
      color: #667eea;
      border-bottom-color: #667eea;
    }

    .tab-btn:hover {
      color: #667eea;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }

    /* Articles List */
    .article-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px;
      background: #f7fafc;
      border-radius: 8px;
      margin-bottom: 12px;
      transition: background 0.3s;
    }

    .article-item:hover {
      background: #edf2f7;
    }

    .article-name {
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 14px;
      flex: 1;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .article-actions {
      display: flex;
      gap: 12px;
    }

    .btn-edit {
      background: #4299e1;
      color: white;
      padding: 6px 16px;
      font-size: 12px;
    }

    .btn-edit:hover {
      background: #3182ce;
    }

    .btn-delete {
      background: #f56565;
      color: white;
      padding: 6px 16px;
      font-size: 12px;
    }

    .btn-delete:hover {
      background: #e53e3e;
    }

    .btn-new {
      background: #48bb78;
      color: white;
      margin-bottom: 16px;
    }

    .btn-new:hover {
      background: #38a169;
    }

    .btn-save {
      background: #667eea;
      color: white;
      margin-top: 16px;
    }

    .btn-save:hover {
      background: #5a67d8;
    }

    /* Friends */
    .friends-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 24px;
    }

    .friend-item {
      display: flex;
      gap: 12px;
      padding: 16px;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      align-items: flex-start;
    }

    .friend-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      object-fit: cover;
    }

    .friend-info {
      flex: 1;
      min-width: 0;
    }

    .friend-name {
      font-weight: 600;
      margin-bottom: 4px;
    }

    .friend-url, .friend-desc {
      font-size: 12px;
      color: #718096;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .btn-remove {
      background: #f56565;
      color: white;
      padding: 4px 12px;
      font-size: 12px;
    }

    .btn-add-friend {
      background: transparent;
      color: #667eea;
      text-decoration: underline;
      margin-top: 12px;
      padding: 4px 0;
    }

    /* Config Editor */
    #config-editor {
      width: 100%;
      min-height: 400px;
      padding: 16px;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 13px;
      line-height: 1.6;
      resize: vertical;
    }

    /* Modal */
    .modal {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.7);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 20px;
    }

    .modal.active {
      display: flex;
    }

    .modal-content {
      background: white;
      width: 100%;
      max-width: 900px;
      max-height: 90vh;
      border-radius: 16px;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .modal-header {
      padding: 24px;
      border-bottom: 2px solid #e2e8f0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    #article-filename {
      font-size: 18px;
      font-weight: 600;
      border: none;
      border-bottom: 2px solid transparent;
      padding: 4px 0;
      flex: 1;
      margin-right: 16px;
    }

    #article-filename:focus {
      outline: none;
      border-bottom-color: #667eea;
    }

    .modal-actions {
      display: flex;
      gap: 12px;
    }

    .btn-cancel {
      background: #e2e8f0;
      color: #4a5568;
    }

    .modal-body {
      flex: 1;
      padding: 24px;
      overflow: auto;
    }

    #article-content {
      width: 100%;
      height: 100%;
      min-height: 500px;
      padding: 16px;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 13px;
      line-height: 1.6;
      resize: none;
    }

    .loading {
      text-align: center;
      padding: 40px;
      color: #718096;
    }

    .error {
      color: #f56565;
      padding: 20px;
      background: #fff5f5;
      border-radius: 8px;
      margin: 20px 0;
    }

    .hidden {
      display: none !important;
    }

    @media (max-width: 768px) {
      #login-section, #dashboard-section {
        padding: 24px;
      }

      .friends-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Login Section -->
    <div id="login-section">
      <h2>üîê GitHub Authentication</h2>
      <p style="margin-bottom: 24px; color: #718096;">Enter your GitHub credentials to manage your blog content.</p>
      
      <div>
        <div id="oauth-section" style="display: none; margin-bottom: 24px;">
          <button id="oauth-login-btn" style="width: 100%; background: #24292e; color: white; display: flex; align-items: center; justify-content: center; gap: 8px;">
            <svg width="20" height="20" viewBox="0 0 16 16" fill="currentColor">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
            </svg>
            Login with GitHub OAuth
          </button>
          <div style="text-align: center; margin: 16px 0; color: #718096; font-size: 14px;">OR</div>
        </div>
        
        <label for="github-token">Personal Access Token</label>
        <input type="password" id="github-token" placeholder="ghp_..." autocomplete="off">
        
        <label for="repo-owner">Repository Owner</label>
        <input type="text" id="repo-owner" placeholder="username" autocomplete="off">
        
        <label for="repo-name">Repository Name</label>
        <input type="text" id="repo-name" placeholder="my-blog" autocomplete="off">
        
        <button id="login-btn">Login to Admin Dashboard</button>
      </div>
    </div>

    <!-- Dashboard Section -->
    <div id="dashboard-section" class="hidden">
      <h1>üìä Admin Dashboard</h1>
      
      <div class="tabs">
        <button class="tab-btn active" data-tab="articles">üìù Articles</button>
        <button class="tab-btn" data-tab="friends">üë• Friends</button>
        <button class="tab-btn" data-tab="config">‚öôÔ∏è Config</button>
      </div>

      <!-- Articles Tab -->
      <div id="articles-tab" class="tab-content active">
        <button class="btn-new" id="new-article-btn">+ New Article</button>
        <div id="articles-list" class="loading">Loading articles...</div>
      </div>

      <!-- Friends Tab -->
      <div id="friends-tab" class="tab-content">
        <div class="friends-container">
          <div>
            <h3 style="margin-bottom: 16px;">English (en)</h3>
            <div id="friends-en-list"></div>
            <button class="btn-add-friend" data-lang="en">+ Add Friend</button>
          </div>
          <div>
            <h3 style="margin-bottom: 16px;">‰∏≠Êñá (zh)</h3>
            <div id="friends-zh-list"></div>
            <button class="btn-add-friend" data-lang="zh">+ Add Friend</button>
          </div>
        </div>
        <button class="btn-save" id="save-friends-btn">Save Changes</button>
      </div>

      <!-- Config Tab -->
      <div id="config-tab" class="tab-content">
        <p style="margin-bottom: 16px; color: #718096;">‚ö†Ô∏è Be careful when editing config.ts - syntax errors may break your site!</p>
        <textarea id="config-editor" spellcheck="false"></textarea>
        <button class="btn-save" id="save-config-btn">Save Configuration</button>
      </div>
    </div>
  </div>

  <!-- Editor Modal -->
  <div id="editor-modal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <input type="text" id="article-filename" placeholder="my-article.md">
        <div class="modal-actions">
          <button class="btn-cancel" id="close-modal-btn">Cancel</button>
          <button class="btn-save" id="save-article-btn">Save Article</button>
        </div>
      </div>
      <div class="modal-body">
        <textarea id="article-content" spellcheck="false"></textarea>
      </div>
    </div>
  </div>

  <script is:inline src="https://cdn.jsdelivr.net/npm/octokit@3.1.2/dist/web/index.min.js"></script>
  <script is:inline>
    (function() {
      const { Octokit } = window.Octokit;
      
      let octokit, owner, repo;
      let currentArticleSha = null;
      let articles = [];
      let friendsData = { en: [], zh: [] };
      let adminConfig = {};

      // DOM Elements
      const loginSection = document.getElementById('login-section');
      const dashboardSection = document.getElementById('dashboard-section');
      const loginBtn = document.getElementById('login-btn');
      const oauthSection = document.getElementById('oauth-section');
      const oauthLoginBtn = document.getElementById('oauth-login-btn');

      // Load admin config from API (env vars)
      async function loadAdminConfig() {
        try {
          const response = await fetch('/api/admin/config');
          adminConfig = await response.json();
          
          // If OAuth is configured, show OAuth button
          if (adminConfig.hasOAuth && adminConfig.githubClientId) {
            oauthSection.style.display = 'block';
          }
          
          // Pre-fill repo owner and name from env vars
          if (adminConfig.repoOwner) {
            document.getElementById('repo-owner').value = adminConfig.repoOwner;
            document.getElementById('repo-owner').disabled = true;
          }
          if (adminConfig.repoName) {
            document.getElementById('repo-name').value = adminConfig.repoName;
            document.getElementById('repo-name').disabled = true;
          }
        } catch (error) {
          console.error('Failed to load admin config:', error);
        }
      }

      // Auto-fill from localStorage
      const savedOwner = localStorage.getItem('admin_owner');
      const savedRepo = localStorage.getItem('admin_repo');
      const savedToken = localStorage.getItem('admin_token');
      
      if (savedOwner && !adminConfig.repoOwner) document.getElementById('repo-owner').value = savedOwner;
      if (savedRepo && !adminConfig.repoName) document.getElementById('repo-name').value = savedRepo;
      if (savedToken) document.getElementById('github-token').value = savedToken;

      // Check for OAuth token in URL hash
      function checkOAuthToken() {
        const hash = window.location.hash.substring(1);
        const params = new URLSearchParams(hash);
        const token = params.get('token');
        
        if (token) {
          // Clear hash
          window.location.hash = '';
          // Auto-login with OAuth token
          autoLogin(token);
        }
      }

      async function autoLogin(token) {
        owner = adminConfig.repoOwner || document.getElementById('repo-owner').value.trim();
        repo = adminConfig.repoName || document.getElementById('repo-name').value.trim();

        if (!owner || !repo) {
          alert('‚ùå Repository owner and name are required');
          return;
        }

        try {
          octokit = new Octokit({ auth: token });
          const { data: user } = await octokit.rest.users.getAuthenticated();
          
          localStorage.setItem('admin_owner', owner);
          localStorage.setItem('admin_repo', repo);
          localStorage.setItem('admin_token', token);

          loginSection.classList.add('hidden');
          dashboardSection.classList.remove('hidden');
          loadArticles();
        } catch (error) {
          alert('‚ùå Auto-login failed: ' + error.message);
        }
      }

      // OAuth Login Handler
      oauthLoginBtn?.addEventListener('click', () => {
        const state = Math.random().toString(36).substring(7);
        localStorage.setItem('oauth_state', state);
        
        const redirectUri = window.location.origin + '/api/auth/callback';
        const authUrl = `https://github.com/login/oauth/authorize?client_id=${adminConfig.githubClientId}&redirect_uri=${encodeURIComponent(redirectUri)}&scope=repo&state=${state}`;
        
        window.location.href = authUrl;
      });

      // Initialize
      loadAdminConfig().then(() => {
        checkOAuthToken();
      });

      // Login Handler
      loginBtn.addEventListener('click', async () => {
        const token = document.getElementById('github-token').value.trim();
        owner = document.getElementById('repo-owner').value.trim();
        repo = document.getElementById('repo-name').value.trim();

        if (!token || !owner || !repo) {
          alert('‚ùå Please fill in all fields');
          return;
        }

        loginBtn.textContent = 'Logging in...';
        loginBtn.disabled = true;

        try {
          octokit = new Octokit({ auth: token });
          const { data: user } = await octokit.rest.users.getAuthenticated();
          
          localStorage.setItem('admin_owner', owner);
          localStorage.setItem('admin_repo', repo);
          localStorage.setItem('admin_token', token);

          loginSection.classList.add('hidden');
          dashboardSection.classList.remove('hidden');
          loadArticles();
        } catch (error) {
          alert('‚ùå Login failed: ' + error.message);
          loginBtn.textContent = 'Login to Admin Dashboard';
          loginBtn.disabled = false;
        }
      });

      // Tab Switching
      document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
          document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
          
          btn.classList.add('active');
          document.getElementById(btn.dataset.tab + '-tab').classList.add('active');

          if (btn.dataset.tab === 'friends') loadFriends();
          if (btn.dataset.tab === 'config') loadConfig();
        });
      });

      // Articles Management
      async function loadArticles() {
        const listEl = document.getElementById('articles-list');
        listEl.innerHTML = '<div class="loading">Loading articles...</div>';

        try {
          const { data } = await octokit.rest.repos.getContent({
            owner, repo, path: 'src/content/posts'
          });

          articles = Array.isArray(data) ? data.filter(item => item.name.endsWith('.md')) : [];
          
          if (articles.length === 0) {
            listEl.innerHTML = '<p style="text-align:center;color:#718096;">No articles found.</p>';
            return;
          }

          listEl.innerHTML = articles.map(article => `
            <div class="article-item">
              <span class="article-name">${article.name}</span>
              <div class="article-actions">
                <button class="btn-edit" data-path="${article.path}" data-sha="${article.sha}">Edit</button>
                <button class="btn-delete" data-path="${article.path}" data-sha="${article.sha}">Delete</button>
              </div>
            </div>
          `).join('');

          attachArticleHandlers();
        } catch (error) {
          listEl.innerHTML = `<div class="error">Error loading articles: ${error.message}</div>`;
        }
      }

      function attachArticleHandlers() {
        document.querySelectorAll('.btn-edit').forEach(btn => {
          btn.addEventListener('click', () => openEditor(btn.dataset.path, btn.dataset.sha));
        });
        
        document.querySelectorAll('.btn-delete').forEach(btn => {
          btn.addEventListener('click', () => deleteArticle(btn.dataset.path, btn.dataset.sha));
        });
      }

      async function openEditor(path, sha) {
        try {
          const { data } = await octokit.rest.repos.getContent({ owner, repo, path });
          const content = atob(data.content);
          
          document.getElementById('article-filename').value = data.name;
          document.getElementById('article-content').value = content;
          currentArticleSha = sha;
          
          document.getElementById('editor-modal').classList.add('active');
        } catch (error) {
          alert('‚ùå Error loading file: ' + error.message);
        }
      }

      async function deleteArticle(path, sha) {
        if (!confirm('‚ö†Ô∏è Are you sure you want to delete this article?')) return;

        try {
          await octokit.rest.repos.deleteFile({
            owner, repo, path, sha,
            message: `Delete ${path} via Admin Dashboard`
          });
          loadArticles();
        } catch (error) {
          alert('‚ùå Error deleting file: ' + error.message);
        }
      }

      document.getElementById('new-article-btn').addEventListener('click', () => {
        document.getElementById('article-filename').value = 'new-post.md';
        document.getElementById('article-content').value = `---
title: New Post
published: 2024-01-01
description: Post description
tags: []
category: Tech
draft: false
---

Your content here...`;
        currentArticleSha = null;
        document.getElementById('editor-modal').classList.add('active');
      });

      document.getElementById('close-modal-btn').addEventListener('click', () => {
        document.getElementById('editor-modal').classList.remove('active');
      });

      document.getElementById('save-article-btn').addEventListener('click', async () => {
        const filename = document.getElementById('article-filename').value.trim();
        const content = document.getElementById('article-content').value;
        
        if (!filename) {
          alert('‚ùå Filename is required');
          return;
        }

        const path = `src/content/posts/${filename}`;
        const encoded = btoa(unescape(encodeURIComponent(content)));

        try {
          await octokit.rest.repos.createOrUpdateFileContents({
            owner, repo, path, content: encoded,
            sha: currentArticleSha || undefined,
            message: `${currentArticleSha ? 'Update' : 'Create'} ${filename} via Admin Dashboard`
          });
          
          document.getElementById('editor-modal').classList.remove('active');
          loadArticles();
        } catch (error) {
          alert('‚ùå Error saving file: ' + error.message);
        }
      });

      // Friends Management
      async function loadFriends() {
        try {
          const { data } = await octokit.rest.repos.getContent({ owner, repo, path: 'src/friends.ts' });
          const content = atob(data.content);

          const enMatch = content.match(/const friendsEn: Friend\[\] = (\[[\s\S]*?\])/);
          const zhMatch = content.match(/const friendsZh: Friend\[\] = (\[[\s\S]*?\])/);

          if (enMatch) friendsData.en = eval(enMatch[1]);
          if (zhMatch) friendsData.zh = eval(zhMatch[1]);

          renderFriendsList('en');
          renderFriendsList('zh');
        } catch (error) {
          alert('‚ùå Error loading friends: ' + error.message);
        }
      }

      function renderFriendsList(lang) {
        const listEl = document.getElementById(`friends-${lang}-list`);
        listEl.innerHTML = friendsData[lang].map((friend, index) => `
          <div class="friend-item">
            <img src="${friend.avatar}" class="friend-avatar" alt="${friend.name}">
            <div class="friend-info">
              <div class="friend-name">${friend.name}</div>
              <div class="friend-url">${friend.url}</div>
              <div class="friend-desc">${friend.description}</div>
            </div>
            <button class="btn-remove" onclick="window.removeFriend('${lang}', ${index})">Remove</button>
          </div>
        `).join('');
      }

      window.removeFriend = (lang, index) => {
        friendsData[lang].splice(index, 1);
        renderFriendsList(lang);
      };

      document.querySelectorAll('.btn-add-friend').forEach(btn => {
        btn.addEventListener('click', () => {
          const lang = btn.dataset.lang;
          const name = prompt('Name:');
          if (!name) return;
          const url = prompt('URL:');
          const avatar = prompt('Avatar URL:');
          const description = prompt('Description:');

          friendsData[lang].push({ name, url, avatar, description });
          renderFriendsList(lang);
        });
      });

      document.getElementById('save-friends-btn').addEventListener('click', async () => {
        const newContent = `import type { Language } from '@/i18n/config'

export interface Friend {
  name: string
  url: string
  avatar: string
  description: string
}

const friendsEn: Friend[] = ${JSON.stringify(friendsData.en, null, 2)}

const friendsZh: Friend[] = ${JSON.stringify(friendsData.zh, null, 2)}

export const friendsData: Record<Language, Friend[]> = {
  'en': friendsEn,
  'zh': friendsZh,
}
`;
        const encoded = btoa(unescape(encodeURIComponent(newContent)));

        try {
